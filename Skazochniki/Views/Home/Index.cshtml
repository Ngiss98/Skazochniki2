@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>
        Index
    </title>
</head>
<body>
    <h1>
        Тестовая запись
    </h1>
    <hr>
    <table>
        <thead>
            <tr>
                <td>
                    Id
                </td>
                <td>
                    Имя
                </td>
                <td>
                    Цена
                </td>
                <td>
                    <a href="#">Купить</a>
                </td>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var Test_Item in ViewBag.Course)
                {
                    <tr>
                        <td>@Test_Item.Id</td>
                        <td>@Test_Item.Name</td>
                        <td>@Test_Item.Price</td>
                        <td><a href="/Home/Buy/@Test_Item.Id">Купить</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</body>
</html>